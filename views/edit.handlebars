<div class="row mt-4">
  <div class="col-md-6">
    <h3>Edit Post:</h3>

    <form class="form new-blog-entry">
      <div class="form-group">
        <label for="blog-name">Blog name:</label>
        <input class="form-input" type="text" id="blog-name" name="blog-name" value={{blog.name}}>
      </div>
  
      <div class="form-group">
        <label for="blog-entry">Entry:</label>
        <textarea class="form-input" id="blog-entry" name="blog-entry">{{blog.entry}}</textarea>
      </div>
      <div class="form-group">
            <button class="btn btn-sm btn-danger editbutton" data-id="{{blog.id}}">UPDATE</button>
      </div>
    </form>
  </div>
